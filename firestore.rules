rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTripOwner(resource) {
      return resource.data.carrierUid == request.auth.uid;
    }

    // Users Collection
    // Anyone can read a user's basic profile (needed for booking/search UI)
    // Only the user can create/update their own profile
    match /users/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Trips Collection
    match /trips/{tripId} {
      // Anyone can search/view trips
      allow read: if true;

      // Only authenticated users can create trips
      // New trip must have the creator's UID as carrierUid
      allow create: if isAuthenticated() 
                   && request.resource.data.carrierUid == request.auth.uid
                   && request.resource.data.status == 'available';

      // Updates are complex:
      // 1. Owner can update details (from, to, price, etc.)
      // 2. A shipper can BOOK the trip (update status to 'booked')
      allow update: if isAuthenticated() && (
        // Case 1: Carrier updating their own trip
        (isTripOwner(resource) && request.resource.data.carrierUid == request.auth.uid) ||
        
        // Case 2: Shipper booking the trip
        (
          resource.data.status == 'available' && // Must be available
          request.resource.data.status == 'booked' && // Changing to booked
          request.resource.data.bookedByUid == request.auth.uid && // Claiming it
          // Ensure they don't change the carrier or trip details, only booking fields
          request.resource.data.carrierUid == resource.data.carrierUid && 
          request.resource.data.price == resource.data.price
        )
      );

      // Only owner can delete
      allow delete: if isAuthenticated() && isTripOwner(resource);
      
      // Messages Subcollection (chat inside a trip)
      // Only the Carrier or the Booker can read/write messages
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && (
           get(/databases/$(database)/documents/trips/$(tripId)).data.carrierUid == request.auth.uid ||
           get(/databases/$(database)/documents/trips/$(tripId)).data.bookedByUid == request.auth.uid
        );
      }
    }

    // Reviews Collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.reviewerUid == request.auth.uid;
      // Users can't delete reviews once posted (usually)
    }

    // Conversations Collection (for future use if you move chat here)
    match /conversations/{conversationId} {
      allow read, write: if isAuthenticated() && 
        (request.auth.uid in resource.data.participants || request.auth.uid in request.resource.data.participants);
    }
  }
}
