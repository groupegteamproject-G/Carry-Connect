rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /trips/{tripId} {
      allow read, write: if true;
      allow delete: if request.auth != null && request.auth.uid == resource.data.carrierUid;

      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          request.auth.uid == get(/databases/$(database)/documents/trips/$(tripId)).data.carrierUid ||
          request.auth.uid == get(/databases/$(database)/documents/trips/$(tripId)).data.bookedByUid ||
          get(/databases/$(database)/documents/trips/$(tripId)).data.status == "available"
        );
      }
    }
  }
}
