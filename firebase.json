{
  "hosting": {
    "public": "next-app/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "database": "(default)",
    "location": "europe-west10",
    "rules": "db/firestore.rules",
    "indexes": "db/firestore.indexes.json"
  }
}
